<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="14dp"
    android:layout_marginEnd="14dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        style="@style/CoinBitText.BodyAlternate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="About" />
    <LinearLayout

        android:background="@drawable/background_rounded_all"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <include
            android:id="@+id/madoul_of_card_of_About"
            layout="@layout/madoual_about_card" />

        <View
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/secondaryTextColor"
        android:padding="10dp" />
    <include
        android:id="@+id/madoul_about_text"
        layout="@layout/madoul_about_text"/>
    </LinearLayout>

</LinearLayout>